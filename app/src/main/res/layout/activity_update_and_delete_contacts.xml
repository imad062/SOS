<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    >


    <EditText
        android:background="@drawable/reactangular_button"
        android:id="@+id/name_activity_updateDelete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:background="@drawable/reactangular_button"
        android:id="@+id/phonenum_activity_updateDelete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:text=""
        android:textColor="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/name_activity_updateDelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@android:color/holo_green_dark"
        android:id="@+id/update_activity_updateDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/delete_activity_updateDelete"
        android:layout_alignBottom="@+id/delete_activity_updateDelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@android:color/holo_red_dark"
        android:id="@+id/delete_activity_updateDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/phonenum_activity_updateDelete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>